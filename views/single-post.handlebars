{{#if loggedIn}}
  <h1>Welcome, {{username}}!</h1>
{{/if}}

<div class="single-post">
  <h2>{{post.title}}</h2>
  <p>{{post.content}}</p>
  <p>Posted by {{post.user.username}}</p>
</div>

{{#if loggedIn}}
  <form class="add-comment-form">
    <textarea id="comment-text" placeholder="Enter your comment"></textarea>
    <button class="btn" type="submit">Add Comment</button>
  </form>
{{/if}}

{{#if post.comments.length}}
  <div class="comments-section">
    <h3>Comments</h3>
    {{#each post.comments}}
      <div class="comment">
        <p>{{this.comment_text}}</p>
        {{#if ../loggedIn}}
          {{#if (equals ../username this.user.username)}}
            <button class="btn delete-comment" data-id="{{this.id}}">Delete</button>
          {{/if}}
        {{/if}}
        <p>Commented by {{this.user.username}}</p>
      </div>
    {{/each}}
  </div>
{{/if}}
